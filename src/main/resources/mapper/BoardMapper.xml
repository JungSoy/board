<!--게시물 목록 페이징 에러 수정 후 -->
<select id="select_listpaging" resultType="com.board.board.BoardVO">
    <![CDATA[
    SELECT d.rn, d.bid, d.btitle, d.bcontent, d.userid, d.bregdate, d.bupdate, d.cate
    FROM (
        
        SELECT a.rn, a.bid, a.btitle, a.bcontent, a.userid, a.bregdate, a.bupdate, a.cate
        FROM(
	    
	        SELECT rownum AS rn, bid, btitle, bcontent, userid, bregdate, bupdate, c.cate
	        FROM board b 
	        LEFT JOIN category c ON b.cno = c.cno
	        WHERE del='n'
	        ]]> 
	        <if test="cno != null and cno > 0">
	        	AND c.cno = #{cno}
	        </if>
	        <if test="keyword != null">
	            <include refid="criteria"></include>
	        </if>
	        <![CDATA[
	         	ORDER BY bid ASC) a
	         	
		WHERE a.rn <= #{pageNum, jdbcType=INTEGER} * #{amount, jdbcType=INTEGER}
		ORDER BY a.bid ASC) d
		
	WHERE d.rn > (#{pageNum, jdbcType=INTEGER} - 1) * #{amount, jdbcType=INTEGER}
	ORDER BY d.bid ASC
    ]]>
</select> 

